<p id="notice"><%= notice %></p>

<h1>Player ID: <%= @gpm_search.player_id %></h1>
<hr>

<div>Showing 100 results:</div>

<table class="table">
  <thead>
    <th>Match ID</th>
    <th>Hero</th>
    <th>GPM</th>
    <th>Days Ago</th>
    <th>Game Duration</th>
  </thead>

  <% @stats.each do |game| %>
    <tr>
      <td><a href="http://www.dotabuff.com/matches/<%= game[:match_id] %>"><%= game[:match_id] %></a></td>
      <td><%= game[:hero] %></td>
      <td><%= game[:gold_per_minute] %></td>
      <td><%= game[:days_ago] %></td>
      <td><%= game[:duration_in_minutes] %></td>
    </tr>
  <% end %>

</table>
